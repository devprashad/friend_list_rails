<% if user_signed_in? %>
  <h1>Mains</h1>
  <br/>
  <div id="mains">
    <table class='table table-striped table-bordered table-hover'>
      <thead class="thead-dark">
        <tr>
          <th><strong>Name</strong></th>
          <th><strong>Email</strong></th>
          <th><strong>Phone</strong></th>
          <th><strong>Twitter</strong></th>
        </tr>
      </thead>
      <tbody>
        <% @mains.each do |main| %>
          <% if main.user == current_user %>
            <tr id="<%= dom_id(main) %>">
              <td><%= link_to "#{main.firstname} #{main.lastname}", main %></td>
              <td><%= main.email %></td>
              <td><%= main.phone %></td>
              <td><%= main.twitter %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "New main", new_main_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Home#index</h1>
  <p>heyy hello</p>
<% end %>
